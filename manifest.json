{
    "manifest_version": 2,
    "name": "youtube-2-ppt",
    "version": "1.0",
    "content_security_policy": "script-src 'self' https://*.youtube.com; object-src 'self'",


    "icons": {
	"48": "images/icon.png"
    },

    "browser_action": {
	"default_icon": {
	    "48": "images/icon.png"
	},
	"default_title": "YouTube2ppt"
    },

    "background": {
	"scripts": ["background.js"]
    },

    "permissions": [
	"<all_urls>",
	"tabs",
	"scripting"
    ]
}
