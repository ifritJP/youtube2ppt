{
    "manifest_version": 3,
    "name": "youtube2ppt",
    "version": "1.0.2",

    "icons": {
	"48": "images/icon.png"
    },

    "action": {
	"default_icon": {
	    "48": "images/icon.png"
	},
	"default_title": "YouTube2ppt"
    },

    "background": {
	"service_worker": "background.js"
    },

    "permissions": [
	"activeTab",
	"tabs",
	"scripting"
    ],
    "host_permissions": [
	"https://ifritjp.github.io/*",
	"https://www.youtube.com/*"
    ]
}
